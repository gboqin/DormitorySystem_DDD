@model DormitorySystem.Application.viewModel.LoginDto
@{
    ViewBag.Title = "宿舍信息管理系统";
    Layout = null;
}
<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <title>@ViewBag.Title</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script type="text/javascript" src="@Url.Content("~/Scripts/sys_js/login.js")"></script>
</head>
<body>
    <form id="formLogin" method="post">
        @Html.AntiForgeryToken()
        <div id="loginBox" class="panel panel-default" style="max-width:360px; margin:0 auto;">
            <div class="panel-heading"><h4>登陆</h4></div>
            <div style="height:20px;clear:both;display:block"></div>
            <div class="panel-body">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                <div class="form-group">
                    @Html.Label("工号", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.EditorFor(model => model.code, new { htmlAttributes = new { @class = "form-control", placeholder = "请输入工号" } })
                        @Html.ValidationMessageFor(model => model.code, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div style="height:10px;clear:both;display:block"></div>
                <div class="form-group">
                    @Html.Label("密码", htmlAttributes: new { @class = "control-label col-md-3" })
                    <div class="col-md-9">
                        @Html.PasswordFor(model => model.password, new { @class = "form-control", @placeholder = "请输入密码" })
                        @Html.ValidationMessageFor(model => model.password, "", new { @class = "text-danger" })
                    </div>
                </div>
                <div style="height:20px;clear:both;display:block"></div>
                <div class="form-group">
                    <div class="col-md-offset-3 col-md-6 col-md-offset-3">
                        <input type="button" onclick="btn_Click()" value="登录" class="btn btn-primary" />
                        <input type="reset" value="取消" class="btn btn-warning" />
                    </div>
                </div>
            </div>
        </div>
    </form>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>
