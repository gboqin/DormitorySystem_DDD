                </ul>
            </li>
            <li class="navbar-right">
                <a onclick="location.href='@Url.Action("LogOff", "Account")'" style=" background-color:#0055A6;color: red; cursor: pointer;">注销</a>
            </li>
            <li class="navbar-right">
                <a style="background-color:#0055A6;color: white;">用户：</a>
            </li>
        </ul>
    </div>
    <div id="divifr"><iframe id="ifr" name="ifr" frameborder="0" scrolling="no" onload="this.height=100"></iframe></div>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
</body>
</html>